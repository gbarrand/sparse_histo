/bin/cp ${from}/randT .
/bin/cp ${from}/rtausmed .
/bin/cp ${from}/rtausmeui .
/bin/cp ${from}/randd .
/bin/cp ${from}/vdata .

/bin/cp ${from}/args .
/bin/cp ${from}/sout .
/bin/cp ${from}/strip .
/bin/cp ${from}/words .
/bin/cp ${from}/sto .

# inlib/sys :
/bin/mkdir -p ${build_dir}/inlib/sys
cd ${build_dir}/inlib/sys
from=${save_dir}/../../../inexlib/inlib/inlib/sys
/bin/cp ${from}/atime .

