#!/bin/sh -f 

save_dir=`pwd`

#./check_app _upgrade '_upgrade not found.'
#use_status=$?;if [ ${use_status} != 0 ] ; then exit ${use_status};fi
build_dir=`pwd`

#//////////////////////////////////////////////
#/// inlib ////////////////////////////////////
#//////////////////////////////////////////////
