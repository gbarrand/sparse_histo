/bin/cp ${from}/base_histo .
/bin/cp ${from}/b1 .
/bin/cp ${from}/b2 .
/bin/cp ${from}/b3 .
/bin/cp ${from}/h1 .
/bin/cp ${from}/h1d .
/bin/cp ${from}/h2 .
/bin/cp ${from}/h2d .
/bin/cp ${from}/h3 .
/bin/cp ${from}/h3d .

/bin/cp ${from}/profile_data .
/bin/cp ${from}/p1 .
/bin/cp ${from}/p1d .
/bin/cp ${from}/slice .
/bin/cp ${from}/sliced .

/bin/cp ${from}/shisto_data .
/bin/cp ${from}/base_shisto .
/bin/cp ${from}/sb1 .
/bin/cp ${from}/sb2 .
/bin/cp ${from}/sh1 .
/bin/cp ${from}/sh1d .
/bin/cp ${from}/sh2 .
/bin/cp ${from}/sh2d .

# inlib :
/bin/mkdir -p ${build_dir}/inlib
cd ${build_dir}/inlib
from=${save_dir}/../../../inexlib/inlib/inlib
/bin/cp ${from}/mapmanip .
